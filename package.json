{
  "name": "2021-lightdance-editor",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "install:editor": "pnpm install --dir ./editor",
    "install:editor-server": "pnpm install --dir ./editor-server",
    "install:controller-server": "pnpm install --dir ./controller-server",
    "install:file-server": "pnpm install --dir ./file-server",
    "install:all": "(pnpm install); (pnpm install:editor); (pnpm install:editor-server); (pnpm install:controller-server); (pnpm install:file-server)",
    "dev:editor": "cd ./editor && pnpm start",
    "dev:editor-server": "cd ./editor-server && pnpm start",
    "dev:controller-server": "cd ./controller-server && pnpm start",
    "dev:file-server": "cd ./file-server && pnpm start",
    "dev": "run-p dev:*",
    "lint:editor": "cd ./editor && pnpm lint",
    "lint:editor-server": "cd ./editor-server && pnpm lint",
    "lint:all": "run-p lint:*"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "npm-run-all": "^4.1.5"
  }
}
